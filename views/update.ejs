<!DOCTYPE html>
<html>
<head>
  <title>Update Product</title>
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <h1>Update Product</h1>
  <form action="/update/<%=product._id%>" method="POST">
    <div class="form-group">
      <label for="productID">Product ID:</label>
      <input type="text" id="productID" name="productID" required value="<%=product.productID%>" readonly>
    </div>

    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required value="<%=product.name%>">
    </div>

    <div class="form-group">
      <label for="price">Price:</label>
      <input type="number" id="price" name="price" min="1" required value="<%=product.price%>">
    </div>

    <div class="form-group">
      <div class="checkbox-container">
        <input type="checkbox" id="featured" name="featured" <%= product.featured ? 'checked' : '' %>>
        <label for="featured">Featured</label>
      </div>
    </div>

    <div class="form-group">
      <label for="rating">Rating:</label>
      <input type="number" id="rating" name="rating" min="0" max="5" step="0.1" value="<%=product.rating%>">
    </div>

    <div class="form-group">
      <label for="company">Company:</label>
      <input type="text" id="company" name="company" required value="<%=product.company%>">
    </div>

    <div>
      <input type="submit" value="Update Product">
    </div>
  </form>
</body>
</html>
